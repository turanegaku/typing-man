extends layout

block content
  style(type='text/css').
    body {overflow: hidden;}
    #question span.done {color: red;}
    #question span.miss {color: cyan; background-color: rgba(0, 0, 255, 0.6);}
    #drop span.miss {color: blue;}
    dt {white-space:pre; font-size: 2.2vw;}
    dd {white-space:pre; font-size: 2vw;}
    #info > .inline-3 {width: 30%; display:inline-block;}

  #info
    #error.inline-3
      dl
        dt: h3 ERROR
        dd.value 0
    .inline-3
    #time.inline-3
      dl
        dt: h3 Time
        dd.value 00:00.00
    p キー入力と同時にスタートします

    hr

  #question
    block question

  #drop

block script
  script(type='text/javascript', src='/javascripts/typing.js')
