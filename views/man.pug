extends layout

block info
  #error.inline-3
    dl
      dt: h3 ERROR
      dd.value 0
  .inline-3
    p: span.enter NewLine(Enter)
    p: span.delete Delete(BS)
  #time.inline-3
    dl
      dt: h3 Time
      dd.value 00:00.00

  p.inline-6 キー入力と同時にスタートします

block content
  #option
    button#review.default 今のを再生
    button#restart.default はじめから
  #rank
    h3 ランキング
    ol(style='font-size: 2vw;')
      for rank in ranks
        li
          .inline-2.name!= rank.name
          .inline-2.time= rank.time
          .inline-1.error= rank.error

  #drop
  #miss

block script
  script(type='text/javascript', src='/javascripts/typing.js')
