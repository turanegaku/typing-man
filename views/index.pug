extends layout

block content
  style(type='text/css').
    body {overflow: hidden;}
    #question span.done {color: red;}
    #question span.miss {color: cyan; background-color: rgba(0, 0, 255, 0.6);}
    #drop span.miss {color: blue;}
    dt {white-space:pre; font-size: 2.2vw;}
    dd {white-space:pre; font-size: 2vw;}
    #info > .inline-3 {width: 30%; display:inline-block;}

  #info
    #error.inline-3
      dl
        dt: h3 ERROR
        dd.value 0
    .inline-3
    #time.inline-3
      dl
        dt: h3 Time
        dd.value 00:00.00
    p キー入力と同時にスタートします

    hr

  #question
    dl
    dt NAME 
    dd ls -- list directory contents 

    dt SYNOPSIS 
    dd ls [-ABCFGHLOPRSTUW@abcdefghiklmnopqrstuwx1] [file ...] 

    dt DESCRIPTION 
    dd
      | For each operand that names a file of a type other than directory, ls 
      | displays its name as well as any requested, associated information.  For 
      | each operand that names a file of type directory, ls displays the names 
      | of files contained within that directory, as well as any requested, asso-
      | ciated information. 
    dd
      | If no operands are given, the contents of the current directory are dis-
      | played.  If more than one operand is given, non-directory operands are 
      | displayed first; directory and non-directory operands are sorted sepa-
      | rately and in lexicographical order. 

  #drop

block script
  script(type='text/javascript', src='/javascripts/typing.js')
